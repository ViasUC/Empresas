<div class="search-portfolio-container">
  <!-- Header -->
  <div class="search-header">
    <h2>Búsqueda de Portafolios de Candidatos</h2>
    <p class="subtitle">UC-EMP-004 - Encuentra el candidato perfecto para tu empresa</p>
  </div>

  <!-- Estado de carga inicial -->
  <div class="loading-section" *ngIf="currentState === States.LOADING_FILTERS">
    <mat-spinner diameter="50"></mat-spinner>
    <p>Cargando filtros de búsqueda...</p>
  </div>

  <!-- Formulario de búsqueda -->
  <div class="search-form-section" *ngIf="currentState === States.READY || currentState === States.SUCCESS">
    <mat-card class="search-form-card">
      <mat-card-header>
        <mat-card-title>Filtros de Búsqueda</mat-card-title>
      </mat-card-header>
      
      <mat-card-content>
        <form [formGroup]="searchForm" class="search-form">
          <div class="form-row">
            <mat-form-field appearance="outline" class="form-field">
              <mat-label>Carrera</mat-label>
              <mat-select formControlName="carrera">
                <mat-option value="">Todas las carreras</mat-option>
                <mat-option value="ingenieria-software">Ingeniería de Software</mat-option>
                <mat-option value="ingenieria-sistemas">Ingeniería de Sistemas</mat-option>
                <mat-option value="ciencias-computacion">Ciencias de la Computación</mat-option>
              </mat-select>
            </mat-form-field>

            <mat-form-field appearance="outline" class="form-field">
              <mat-label>Ubicación</mat-label>
              <mat-select formControlName="ubicacion">
                <mat-option value="">Cualquier ubicación</mat-option>
                <mat-option value="santiago">Santiago</mat-option>
                <mat-option value="valparaiso">Valparaíso</mat-option>
                <mat-option value="concepcion">Concepción</mat-option>
              </mat-select>
            </mat-form-field>
          </div>

          <div class="form-row">
            <mat-form-field appearance="outline" class="form-field">
              <mat-label>Habilidades (separadas por comas)</mat-label>
              <input matInput formControlName="skills" placeholder="Angular, React, Python...">
            </mat-form-field>
          </div>

          <div class="form-row">
            <div class="range-field">
              <label>Años de Experiencia</label>
              <div class="range-inputs">
                <mat-form-field appearance="outline">
                  <mat-label>Mínimo</mat-label>
                  <input matInput type="number" formControlName="experienciaMin" min="0" max="20">
                </mat-form-field>
                <span class="range-separator">-</span>
                <mat-form-field appearance="outline">
                  <mat-label>Máximo</mat-label>
                  <input matInput type="number" formControlName="experienciaMax" min="0" max="20">
                </mat-form-field>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="range-field">
              <label>Rango Salarial (CLP)</label>
              <div class="range-inputs">
                <mat-form-field appearance="outline">
                  <mat-label>Mínimo</mat-label>
                  <input matInput type="number" formControlName="salarioMin" min="0">
                </mat-form-field>
                <span class="range-separator">-</span>
                <mat-form-field appearance="outline">
                  <mat-label>Máximo</mat-label>
                  <input matInput type="number" formControlName="salarioMax" min="0">
                </mat-form-field>
              </div>
            </div>
          </div>
        </form>
      </mat-card-content>

      <mat-card-actions align="end">
        <button mat-button type="button" (click)="resetSearch()" [disabled]="isLoading()">
          <mat-icon>refresh</mat-icon>
          Limpiar
        </button>
        <button mat-raised-button color="primary" (click)="executeSearch()" 
                [disabled]="!canSearch() || isLoading()">
          <mat-icon>search</mat-icon>
          Buscar Candidatos
        </button>
      </mat-card-actions>
    </mat-card>
  </div>

  <!-- Indicador de búsqueda en progreso -->
  <div class="searching-section" *ngIf="currentState === States.SEARCHING">
    <mat-card class="status-card">
      <mat-card-content class="status-content">
        <mat-spinner diameter="40"></mat-spinner>
        <div class="status-text">
          <h3>Buscando candidatos...</h3>
          <p>Estamos procesando tu búsqueda. Esto puede tomar unos momentos.</p>
        </div>
      </mat-card-content>
    </mat-card>
  </div>

  <!-- Resultados de búsqueda -->
  <div class="results-section" *ngIf="currentState === States.SUCCESS">
    <div class="results-header">
      <h3>Resultados de la Búsqueda</h3>
      <p>Se encontraron {{context.totalResults}} candidatos</p>
    </div>

    <div class="results-grid" *ngIf="hasResults()">
      <mat-card class="candidate-card" *ngFor="let candidate of context.results">
        <mat-card-header>
          <div mat-card-avatar class="candidate-avatar">
            <mat-icon>person</mat-icon>
          </div>
          <mat-card-title>{{candidate.nombre}}</mat-card-title>
          <mat-card-subtitle>{{candidate.carrera}}</mat-card-subtitle>
        </mat-card-header>

        <mat-card-content>
          <div class="candidate-info">
            <div class="info-item">
              <mat-icon>work</mat-icon>
              <span>{{candidate.experiencia}} años de experiencia</span>
            </div>
            <div class="info-item">
              <mat-icon>location_on</mat-icon>
              <span>{{candidate.ubicacion}}</span>
            </div>
            <div class="info-item">
              <mat-icon>attach_money</mat-icon>
              <span>${{candidate.salarioEsperado | currency:'CLP':'symbol':'1.0-0'}}</span>
            </div>
            <div class="info-item">
              <mat-icon>star</mat-icon>
              <span>{{candidate.rating}}/5</span>
            </div>
          </div>

          <div class="skills-section">
            <h4>Habilidades:</h4>
            <div class="skills-chips">
              <mat-chip-set>
                <mat-chip *ngFor="let skill of candidate.skills">{{skill}}</mat-chip>
              </mat-chip-set>
            </div>
          </div>
        </mat-card-content>

        <mat-card-actions align="end">
          <button mat-button color="primary">
            <mat-icon>visibility</mat-icon>
            Ver Portafolio
          </button>
          <button mat-raised-button color="accent">
            <mat-icon>contact_mail</mat-icon>
            Contactar
          </button>
        </mat-card-actions>
      </mat-card>
    </div>

    <div class="no-results" *ngIf="!hasResults()">
      <mat-icon class="no-results-icon">search_off</mat-icon>
      <h3>No se encontraron candidatos</h3>
      <p>Intenta ajustar los filtros de búsqueda para obtener más resultados.</p>
    </div>
  </div>

  <!-- Estados de error -->
  <div class="error-section" *ngIf="hasError()">
    <mat-card class="error-card">
      <mat-card-content class="error-content">
        <mat-icon class="error-icon" [ngSwitch]="currentState">
          <ng-container *ngSwitchCase="States.ERROR_AUTH">lock</ng-container>
          <ng-container *ngSwitchCase="States.ERROR_FORBIDDEN">block</ng-container>
          <ng-container *ngSwitchCase="States.ERROR_VALIDATION">error_outline</ng-container>
          <ng-container *ngSwitchDefault>error</ng-container>
        </mat-icon>
        
        <div class="error-text">
          <h3 [ngSwitch]="currentState">
            <ng-container *ngSwitchCase="States.ERROR_AUTH">Error de Autenticación</ng-container>
            <ng-container *ngSwitchCase="States.ERROR_FORBIDDEN">Acceso Denegado</ng-container>
            <ng-container *ngSwitchCase="States.ERROR_VALIDATION">Error de Validación</ng-container>
            <ng-container *ngSwitchDefault>Error del Servidor</ng-container>
          </h3>
          <p>{{context.error}}</p>
        </div>
      </mat-card-content>

      <mat-card-actions align="end">
        <button mat-button (click)="resetSearch()" *ngIf="currentState === States.ERROR_AUTH || currentState === States.ERROR_FORBIDDEN">
          <mat-icon>home</mat-icon>
          Volver al Inicio
        </button>
        <button mat-raised-button color="primary" (click)="retry()" 
                *ngIf="currentState === States.ERROR_VALIDATION || currentState === States.ERROR_SERVER">
          <mat-icon>refresh</mat-icon>
          Reintentar
        </button>
      </mat-card-actions>
    </mat-card>
  </div>

  <!-- Debug info (solo en desarrollo) -->
  <div class="debug-info" *ngIf="false">
    <mat-card>
      <mat-card-header>
        <mat-card-title>Debug FSM</mat-card-title>
      </mat-card-header>
      <mat-card-content>
        <p><strong>Estado actual:</strong> {{currentState}}</p>
        <p><strong>Loading:</strong> {{context.isLoading}}</p>
        <p><strong>Error:</strong> {{context.error}}</p>
        <p><strong>Resultados:</strong> {{context.results.length}}</p>
      </mat-card-content>
    </mat-card>
  </div>
</div>